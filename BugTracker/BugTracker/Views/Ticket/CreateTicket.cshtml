@model Ticket
@{
    ViewBag.Title = "CreateTicket";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">My Projects / Create Ticket</li>
        </ol>
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div>
                    <h5 class="card-title">Ticket</h5>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="form-group">
                                @Html.LabelFor(ticket => ticket.Title, "Title")
                                @Html.TextBoxFor(ticket => ticket.Title, new { @class = "form-control", placeholder = "Enter title here" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                @Html.LabelFor(ticket => ticket.Description, "Description")
                                @Html.TextAreaFor(ticket => ticket.Description, new { @class = "form-control", placeholder = "Enter discription here" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Ticket Type</label>
                            <select name="TicketType" class="form-control">
                                @foreach (var type in ViewBag.AllTicketTypes)
                                {
                                    <option value="@type.Id">@type.Name</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Ticket Priority</label>
                            <select class="form-control" name="TicketPriority">
                                @foreach (var priority in ViewBag.AllTicketPriorities)
                                {
                                    <option value="@priority.Id">@priority.Name</option>
                                }
                            </select>
                        </div>                   
                        <button type="submit" class="btn btn-primary mb-2" value="Save">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
