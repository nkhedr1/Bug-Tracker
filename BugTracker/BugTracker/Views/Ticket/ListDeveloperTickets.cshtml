@model List<ViewAllTicketsViewModel>
@{
    ViewBag.Title = "ListDeveloperTickets";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">My Developer Tickets</li>
        </ol>
        <!-- DataTables Example -->
        <caption><strong>My Assigned Tickets</strong></caption>
        <div class="card mb-3">
            <div class="card-header">
                <table class="table table-striped" id="dataTable" cellspacing="0">

                    <thead>
                        <tr>
                            <th scope="col">Ticket Title</th>
                            <th scope="col">Project Name</th>
                            <th scope="col">Date Created</th>
                            <th scope="col">Date Updated</th>
                            <th scope="col">Type</th>
                            <th scope="col">Status</th>
                            <th scope="col">Priority</th>
                            <th scope="col">Created By</th>
                            <th scope="col">Assigned To</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in Model)
                        {
                        <tr>
                            <td>@ticket.Title</td>
                            <td>@ticket.Project.Name</td>
                            <td>@ticket.DateCreated</td>
                            <td>@ticket.DateUpdated</td>
                            <td>@ticket.TicketType.Name</td>
                            <td>@ticket.TicketStatus.Name</td>
                            <td>@ticket.TicketPriority.Name</td>
                            <td>@ticket.CreatedBy.UserName</td>
                            @if (ticket.AssignedTo == null)
                            {
                                <td>Not Assigned</td>
                            }
                            else
                            {
                                <td>@ticket.AssignedTo.UserName</td>
                            }
                            <td><a href="@Url.Action("EditDeveloperTicket", "Ticket", new {id = ticket.Id})">Edit</a></td>
                            <td><a href="@Url.Action("AddCommentDeveloper", "Ticket", new {id = ticket.Id})">Add Comment</a></td>
                            <td><a href="@Url.Action("ListAllCommentsForTicketDeveloperSubmitter", "Comment", new {id = ticket.Id})">My Comments</a></td>
                            <td><a href="@Url.Action("AddAttatchmentDeveloper", "Ticket", new {id = ticket.Id})">Add Attachment</a></td>
                            <td><a href="@Url.Action("ListAllAttachmentsForDeveloperSubmitter", "Attachment", new {id = ticket.Id})">All Attachments</a></td>
                            <td><a href="@Url.Action("ViewTicketDetails", "Ticket", new {id = ticket.Id})">Details</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <caption><strong>My Project Tickets</strong></caption>
        <div class="card mb-3">
            <div class="card-header">
                <table class="table table-striped" id="dataTable2" cellspacing="0">
                    <thead>
                        <tr>
                            <th scope="col">Ticket Title</th>
                            <th scope="col">Project Name</th>
                            <th scope="col">Date Created</th>
                            <th scope="col">Date Updated</th>
                            <th scope="col">Type</th>
                            <th scope="col">Status</th>
                            <th scope="col">Priority</th>
                            <th scope="col">Created By</th>
                            <th scope="col">Assigned To</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ticket in ViewBag.MyAssignedProjectTicketList)
                        {
                        <tr>
                            <td>@ticket.Title</td>
                            <td>@ticket.Project.Name</td>
                            <td>@ticket.DateCreated</td>
                            <td>@ticket.DateUpdated</td>
                            <td>@ticket.TicketType.Name</td>
                            <td>@ticket.TicketStatus.Name</td>
                            <td>@ticket.TicketPriority.Name</td>
                            <td>@ticket.CreatedBy.UserName</td>
                            @if (ticket.AssignedTo == null)
                            {
                                <td>Not Assigned</td>
                            }
                            else
                            {
                                <td>@ticket.AssignedTo.UserName</td>
                            }

                            <td><a href="@Url.Action("EditDeveloperTicket", "Ticket", new {id = ticket.Id})">Edit</a></td>
                            <td><a href="@Url.Action("ViewTicketDetails", "Ticket", new {id = ticket.Id})">Details</a></td>
                            <td><a href="@Url.Action("ListAllCommentsForTicketDeveloperSubmitter", "Comment", new {id = ticket.Id})">My Comments</a></td>
                            <td><a href="@Url.Action("ListAllAttachmentsForDeveloperSubmitter", "Attachment", new {id = ticket.Id})">All Attachments</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>





