@model ManageUsersViewModel
@{
    ViewBag.Title = "AssignUserRoles";
}

        <div id="content-wrapper">
            <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item active">Manage Users / Assign Roles</li>
                </ol>
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">User Role</h5>
                            @*<span class="card-text">Name: @Model.FirstName</span>*@
                            @*<span class="card-text">Email: @Model.Email</span>*@
                        </div>

                        @using (Html.BeginForm("AssignUserRoles", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="role" value="Admin" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                    Admin
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="role" value="Developer" id="defaultCheck2">
                                <label class="form-check-label" for="defaultCheck2">
                                    Developer
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="role" value="Project Manager" id="defaultCheck3">
                                <label class="form-check-label" for="defaultCheck3">
                                    Project Manager
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="role" value="Submitter" id="defaultCheck4">
                                <label class="form-check-label" for="defaultCheck4">
                                    Submitter
                                </label>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
                </div>
                <!-- /.container-fluid -->
