@model UserSettingsViewModel
@{
    ViewBag.Title = "ViewUserDetails";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Settings / User Details</li>
        </ol>
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div>
                    <h5 class="card-title">User Details</h5>
                    <span class="card-text">Name: @Model.FirstName</span>
                </div>
                <div>
                    <a href="@Url.Action("EditUserDetails", "User", new {id = Model.Id})">Edit Profile</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
