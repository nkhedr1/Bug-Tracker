@model UserSettingsViewModel
@{
    ViewBag.Title = "EditUserDetails";
}

<div id="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Settings / User Details / Edit Profile</li>
        </ol>
        <div class="card">
            <div class="card-header">
            </div>
            <div class="card-body">
                <div>
                    <h5 class="card-title">User Name</h5>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <div class="form-label-group">
                                @Html.TextBoxFor(user => user.FirstName, new { @class = "form-control" })
                                @Html.HiddenFor(user => user.Email)
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mb-2" value="Save">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
